<div class="row tab-in-courses">
  <div class="tabbable tabs-left col-md-2">
    <ul class="nav nav-tabs">
      <li role="presentation" class="active">
        <a href="#basic_info" aria-controls="basic_info" role="tab" data-toggle="tab">
          <%= t "admin.tabs.edit_basic_info" %>
        </a>
      </li>
      <li role="presentation">
        <a href="#members" aria-controls="members" role="tab" data-toggle="tab">
          <%= t "admin.tabs.edit_members" %>
        </a>
      </li>
      <li>
        <a data-toggle="tab" href="#subject"><%= t "admin.tabs.edit_subjects" %>
        </a>
      </li>
    </ul>
  </div>

  <div class="tab-content col-md-9">
    <div role="tabpanel" class="tab-pane active" id="basic_info">
      <%= form_for @object, url: edit_course_path, method: :post,
        :html => {class: "form-horizontal denser"} do |f| %>
        <div class="form-group control-group string_type name_field">
          <%= f.label :name, class: "col-sm-2 control-label" %>
          <div class="col-sm-10 controls">
            <%= f.text_field :name, size: Settings.form.field_size, class: "form-control" %>
          </div>
        </div>
        <div class="form-group control-group string_type description_field">
          <%= f.label :description, class: "col-sm-2 control-label" %>
          <div class="col-sm-10 controls">
            <%= f.text_field :description, size: 50, class: "form-control" %>
          </div>
        </div>
        <div class="form-group form-actions">
          <div class="col-sm-offset-2 col-sm-10">
            <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
              <i class="icon-ok icon-white"></i>
              <%= t "admin.form.save" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div role="tabpanel" class="tab-pane" id="members">

    </div>

    <div id="subject" class="tab-pane fade">

    </div>
  </div>
</div>
