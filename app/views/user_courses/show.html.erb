<div id="user-course-show" class="row">
  <div class="col-md-9">
    <div class="breadcrumb-bar">
      <ul class="breadcrumb">
        <li>
          <%= link_to root_url do %>
            <i class="glyphicon glyphicon-th-list"></i>
            <%= t "layouts.paths" %>
          <% end %>
        </li>
        <li><%= link_to t("layouts.all_courses"), courses_path %></li>
        <li class="active"><%= @course.name %></li>
      </ul>
    </div>

    <h2><%= @course.name %></h2>
    <div class="description"><%= @course.description %></div>

    <h3><%= t "courses.list_subject" %></h3>
    <div class="subject-list">
      <% @user_subjects.each_with_index do |user_subject, index| %>
        <div class="col-xs-1">
          <%= link_to user_course_subject_path(@user_course, user_subject.subject),
            title: t("user_subjects.statuses.#{user_subject.status}") do %>
            <% if index == 0 %>
              <div class="node node-<%= user_subject.status %>"></div>
            <% else %>
              <div class="node node--connected node-<%= user_subject.status %>"></div>
            <% end %>
          <% end %>
        </div>

        <div class="subject col-xs-11 row">
          <div class="col-xs-2 subject-image">
            <%= set_image user_subject %>
          </div>
          <div class="col-xs-10 infor">
            <div>
              <span class="subject-name"><%= link_to user_subject.name,
                user_course_subject_path(@user_course, user_subject.subject) %>
              </span>&nbsp;
              <span><i><%= "#{user_subject.during_time} "%>
                <%= t("user_subjects.labels.days") %></i>
              </span>
            </div>
            <div><%= truncate(user_subject.description, length: 110) %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-3 info-panel">
    <div class="right-panel">
      <%= render "info_panel" %>
    </div>
  </div>
</div>
<%= render "shared/member_modal" %>
