<% if current_user.present? && current_user.decorate.allow_access_admin %>
  <div class="row">
    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-aqua">
        <div class="inner">
          <h3><%= @count_course %></h3>
          <p><%= t "statics.courses" %></p>
        </div>
        <div class="icon">
          <i class="ion-university"></i>
        </div>
        <a href="/admin/courses" class="small-box-footer"><%= t "staticpages.more_info" %>
          <i class="fa fa-arrow-circle-right"></i></a>
      </div>
    </div>
    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-red">
        <div class="inner">
          <h3><%= @count_course_active %></h3>
          <p><%= t "staticpages.courses_active" %></p>
        </div>
        <div class="icon">
          <i class="ion-university"></i>
        </div>
        <a href="#" class="small-box-footer"><%= t "staticpages.more_info" %>
          <i class="fa fa-arrow-circle-right"></i></a>
      </div>
    </div>
    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-green">
        <div class="inner">
          <h3><%= @count_user %></h3>
          <p><%= t "staticpages.users" %></p>
        </div>
        <div class="icon">
          <i class="ion-person-stalker"></i>
        </div>
        <a href="/admin/profiles" class="small-box-footer"><%= t "staticpages.more_info" %>
          <i class="fa fa-arrow-circle-right"></i></a>
      </div>
    </div>
    <div class="col-lg-3 col-xs-6">
      <div class="small-box bg-yellow">
        <div class="inner">
          <h3><%= @count_user_inprogress %></h3>
          <p><%= t "staticpages.user_inprogress" %></p>
        </div>
        <div class="icon">
          <i class="ion-person-stalker"></i>
        </div>
        <a href="#" class="small-box-footer"><%= t "staticpages.more_info" %>
          <i class="fa fa-arrow-circle-right"></i></a>
      </div>
    </div>      
  </div>
<% end %>
