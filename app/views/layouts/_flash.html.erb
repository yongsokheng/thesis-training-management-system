<% [:notice, :error, :alert, :failed, :success].each do |level| %>
  <% unless flash[level].blank? %>
    <div class="flash-alert alert <%= flash_class level %> hide-flash">
      <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
      <%= flash[level] %>
    </div>
  <% end %>
<% end %>
