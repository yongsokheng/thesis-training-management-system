<div id="admin-header">
  <header class="main-header">
    <a href="/" class="logo">
    <span class="logo-lg"><%= t :name_system %></span></a>
    <nav class="navbar navbar-static-top" role="navigation">
      <a href="javascript:void(0)" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      </a>
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= avatar_user_tag current_user, "user-image", Settings.image_size_50 %>
              <span class="hidden-xs"><%= current_user.name %></span>
            </a>
            <ul class="dropdown-menu">
              <li class="user-header">
                <%= avatar_user_tag current_user, "img-circle", Settings.image_size_50 %>
                <p><%= current_user.name %></p>
              </li>
              <li class="user-footer">
                <div class="pull-left">
                  <%= link_to t("staticpages.profile"), admin_user_path(current_user),
                    class: "btn btn-default btn-flat" %>
                </div>
                <div class="pull-right">
                  <%= link_to t("staticpages.logout"), destroy_user_session_path,
                    method: :delete, class: "btn btn-default btn-flat" %>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <aside class="main-sidebar">
    <section class="sidebar">
      <div class="user-panel">
        <div class="pull-left">
          <%= avatar_user_tag current_user, "img-circle", Settings.image_size_50 %>
        </div>
        <div class="pull-left info">
          <p><%= current_user.name %></p>
          <a href="#"><i class="fa fa-circle text-success"></i><%= t :online %></a>
        </div>
      </div>
      <ul class="sidebar-menu">
        <% if can? :read, Course %>
          <li>
            <%= link_to admin_courses_path do %>
              <i class="fa fa-calendar"></i><span><%= t "layouts.courses" %></span>
            <% end %>
          </li>
        <% end %>
        <% if can? :read, Subject %>
          <li>
            <%= link_to admin_subjects_path do %>
              <i class="fa fa-laptop"></i><span><%= t "layouts.subjects" %></span>
            <% end %>
          </li>
        <% end %>
        <% if can? :read, Role %>
          <li>
            <%= link_to admin_roles_path do %>
              <i class="fa fa-table"></i><span><%= t "layouts.roles" %></span>
            <% end %>
          </li>
        <% end %>
        <% if can?(:read, Evaluation) || can?(:read, EvaluationTemplate) ||
          can?(:read, Rank) %>
          <li id="evaluations-header" class="treeview">
            <a href="javascript:void(0)">
              <i class="fa fa-book"></i><span><%= t "layouts.evaluations" %></span>
              <i class="fa fa-angle-left pull-right"></i>
            </a>
            <%= render "layouts/side_panel",
              object: [Evaluation, EvaluationTemplate, Rank] %>
          </li>
        <% end %>
        <% if can?(:read, University) || can?(:read, Status) ||
          can?(:read, UserType) || can?(:read, User) %>
          <li id="user-profiles-header" class="treeview">
            <a href="javascript:void(0)">
              <i class="fa fa-book"></i><span><%= t "layouts.user_profiles" %></span>
              <i class="fa fa-angle-left pull-right"></i>
            </a>
            <%= render "layouts/side_panel", object: [User, University,
              Status, UserType] %>
          </li>
        <% end %>
      </ul>
    </section>
  </aside>
</div>
