<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="label box-title">
      <%= t "subjects.members" %>
      <span class="badge label-primary"><%= @users.size %></span>
    </h3>
  </div>
  <div class="box-body no-padding">
    <%= render "shared/member_panel" %>
  </div>
</div>

<div class="card">
  <div id="image-course">
    <%= set_image @user_subject, Settings.image_size_200 %>
  </div><br>
  <div class="task-infor">
    <% @task_statuses.each do |key, value| %>
      <div class="status">
        <i class="fa fa-circle circle-<%= key %> " aria-hidden="true"></i>&nbsp;
        <%= t "subjects.tasks.#{key}_tasks" %>
        <%= instance_variable_get "@number_of_task_#{key}" %>/<%= @number_of_task %>
      </div>
    <% end %>
  </div>
</div>

<div class="sector-content">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="label box-title"><%= t "subjects.note" %></h3>
    </div>
    <div class="box-body">
      <div class="subject-note">
        <p><%= t "subjects.note_during_time", during_time: @subject.during_time %></p>
      </div>
    </div>
  </div>
</div>
<%= render partial: "shared/documents", locals: {documents: @subject.documents} %>
